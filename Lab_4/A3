sequence = input("Введите строку из 0 и 1 : ")
def analyze_sequence(sequence):
    if len(sequence) < 5:
        return "Ошибка: строка слишком короткая. Нужно минимум 5 символов"
    for char in sequence:
        if char != '0' and char != '1':
            return "Ошибка: строка должна содержать только символы '0' и '1'"
    total_packets = len(sequence)
    lost_packets = 0
    for char in sequence:
        if char == '0':
            lost_packets += 1
    max_loss_streak = 0
    current_streak = 0
    for char in sequence:
        if char == '0':
            current_streak += 1
            if current_streak > max_loss_streak:
                max_loss_streak = current_streak
        else:
            current_streak = 0
    loss_percent = (lost_packets / total_packets) * 100
    if loss_percent <= 1:
        quality = "Отличное качество"
    elif loss_percent <= 5:
        quality = "Хорошее качество"
    elif loss_percent <= 10:
        quality = "Удовлетворительное качество"
    elif loss_percent <= 20:
        quality = "Плохое качество"
    else:
        quality = "Критическое состояние сети"
    result = " Анализ сети:\n"
    result += " Общая длина: " + str(total_packets) + "\n"
    result += " Потерянных пакетов: " + str(lost_packets) + "\n"
    result += " Самая длинная серия потерь: " + str(max_loss_streak) + "\n"
    result += " Процент потерь: " + str(loss_percent ) + "%\n"
    result += " Оценка качества: " + quality
    return result
print(analyze_sequence(sequence))
